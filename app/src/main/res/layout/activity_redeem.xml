<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/bg_blur"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RedeemActivity">
    <ImageView
        android:id="@+id/iv_logo1"
        android:layout_width="@dimen/_170sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_height="@dimen/_100sdp"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="@dimen/_220sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="horizontal"
        android:background="@drawable/bubble_counter_bg"
        android:gravity="center">

      >

        <EditText
            android:id="@+id/tv_bubble_count"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Enter Code"
            android:textColorHint="@color/black"
            android:background="#00000000"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Menu Buttons Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:gravity="center"

        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/iv_code"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@drawable/blank_card"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Claim"
                android:textColor="@color/white"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_get_redeeim"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/_15sdp"
        app:strokeWidth="0dp"
        app:cardCornerRadius="@dimen/_15sdp"
        android:layout_height="@dimen/_135sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/redeem"

        />
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>